<!doctype html>
<html lang="UTF-8">
{% include 'common/head.twig' %}
<body>
<div class="flex-center position-ref full-height">
    <div class="content">
        <div class="title m-b-md">
            {{ appName }} - {{ pageName }}
        </div>

        {% include 'common/breadcrump.twig' %}
        <div class="row">
            <a class="btn btn-default" href="/users/create">Create user</a>
        </div>
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.first_name }}</td>
                            <td>{{ user.last_name }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a class="btn btn-danger" href="/users/delete/{{ user.id }}"> <i class="bi bi-trash">Delete</i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
